<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.finalproject.yourdoctor" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".SplashScreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".FixAppointment"
            android:label="@string/title_activity_fix_appointment" >
        </activity>
        <activity
            android:name=".Doctor"
            android:label="@string/title_activity_doctor" >
        </activity>
        <activity
            android:name=".Appointments"
            android:label="@string/title_activity_appointments" >
        </activity>
        <activity
            android:name=".DoctorRegister"
            android:label="@string/title_activity_doctor_register" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.finalproject.yourdoctor.Doctor" />
        </activity>
        <activity
            android:name=".SelectDoctor"
            android:label="@string/title_activity_select_doctor" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.finalproject.yourdoctor.BasicInfo" />
        </activity>
        <activity
            android:name=".DateAndTime"
            android:label="@string/title_activity_date_and_time" >
        </activity>
        <activity
            android:name=".BasicInfo"
            android:label="@string/title_activity_basic_info" >
        </activity>
        <activity
            android:name=".Confirm"
            android:label="@string/title_activity_confirm" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.finalproject.yourdoctor.BasicInfo" />
        </activity>
        <activity
            android:name=".ViewStatus"
            android:label="@string/title_activity_view_status" >
        </activity>
        <activity
            android:name=".LastStatus"
            android:label="@string/title_activity_last_status" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.finalproject.yourdoctor.BasicInfo" />
        </activity>
        <activity
            android:name=".Response"
            android:label="@string/title_activity_response" >
        </activity>
        <activity
            android:name=".AppStatus"
            android:label="@string/title_activity_app_status" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.finalproject.yourdoctor.Appointments" />
        </activity>
    </application>

</manifest>
